                    "id": {
                      "type": "integer",
                      "format": "int64"
                    },
                    "recipientName": {
                      "type": "string",
                      "description": "Имя получателя"
                    },
                    "type": {
                      "type": "string",
                      "description": "Тип посылки",
                      "enum": [
                        "LETTER",
                        "PACKAGE",
                        "PARCEL",
                        "POSTCARD"
                      ]
                    },
                    "destination": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string",
                          "description": "Название почтового отделения"
                        },
                        "address": {
                          "type": "string",
                          "description": "Адрес почтового отделения"
                        },
                        "index": {
                          "type": "string",
                          "description": "Индекс почтового отделения"
                        }
                      },
                      "description": "Точка назначения"
                    },
                    "status": {
                      "type": "string",
                      "description": "Статус отправления",
                      "enum": [
                        "REGISTERED",
